{
  "name": "calculator-mania",
  "description": "Simple calculator",
  "version": "0.0.1",
  "homepage": "http://JordanMaduro.github.io/calculator",
  "private": true,
  "scripts": {
    "predeploy": "vite build",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "cz": "cz",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint src --max-warnings=0",
    "format": "prettier src --write",
    "generate": "plop",
    "prepare": "husky install",
    "clean": "rm -rf node_modules pnpm-lock.yaml",
    "clean:install": "pnpm run clean && pnpm i",
    "release": "standard-version"
  },
  "dependencies": {
    "ahooks": "^2.10.12",
    "classnames": "^2.3.1",
    "mathjs": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.3.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tailwindcss": "^1.17.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-canvas-mock": "^2.3.1",
    "jest-css-modules": "^2.1.0",
    "lint-staged": "^12.0.2",
    "plop": "^2.7.6",
    "postcss": "^8.3.11",
    "postcss-modules": "^4.2.2",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "standard-version": "^9.3.2",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "vite": "^2.6.14"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
